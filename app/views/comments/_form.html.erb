<%= form_with model: [@crew, current_user, @post, @post.comments.new],
              local: true, id: 'create-comment-form' do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :text,
                      placeholder: 'Write your comment here...',
                      required: true, class: 'textarea' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit 'Save', class: 'button is-primary' %>
    </div>
  </div>
<% end %>

