<%= form_with model: [@crew, current_user],
              method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :first_name, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.text_field :first_name, class: 'input',
                       placeholder: 'first name', required: true %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <%= f.label :last_name, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.text_field :last_name, class: 'input',
                       placeholder: 'last name', required: true %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.text_field :email, type: 'email', class: 'input',
                       placeholder: 'email', required: true %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, 'Change password', class: 'label' %>
    <div class="control has-icons-left">
      <%= f.password_field :password, type: 'password', class: 'input',
                           placeholder: 'password', required: true %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>
  <div class="submit-field">
    <%= f.submit class: 'button is-primary' %>
  </div>
<% end %>
