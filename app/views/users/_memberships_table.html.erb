<h3 class="title is-size-3">Memberships</h3>
<table class="table is-hoverable is-fullwidth">
  <thead>
  <tr>
    <th>Name</th>
    <th>Abilities</th>
    <th class="has-text-centered">Remove?</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.crew_memberships.each do |membership| %>
    <tr>
      <td><%= membership.crew.name %></td>
      <td><%= ability_icons(membership: membership) %></td>
      <td class="has-text-centered">
        <%= link_to crew_user_crew_membership_path(@crew, current_user, membership),
                    data: { behavior: 'delete-crew-membership' }, class: 'button is-small is-danger is-light' do %>
          <i class="fas fa-times"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
