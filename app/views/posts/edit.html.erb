<div id="user-posts-edit">
  <%= render 'layouts/error_messages', obj: @post %>
  <%= form_with model: @post,
                url: user_post_path(current_user, @post),
                local: true do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_field :title,
                         placeholder: 'Title', required: true,
                         maxlength: 250, class: 'input is-large' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.rich_text_area :body,
                             placeholder: 'Write whatever here' %>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <%= f.submit 'Submit',
                     class: 'button is-link' %>
      </div>
      <div class="control">
        <%= link_to 'Cancel', user_posts_path(current_user),
                    class: 'button is-light' %>
      </div>
    </div>
  <% end %>
</div>
