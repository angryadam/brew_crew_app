<div id="user-posts-index">
  <h2 class="is-size-2" id="index-heading">Your Posts</h2>
  <div class="columns is-multiline" id="posts-container">
    <% @posts.each do |post| %>
      <div class="column is-one-third">
        <div class="box">
          <h4 class="post-title is-size-4">
            <%= link_to post.title.truncate(30), user_post_path(current_user, post) %>
          </h4>
          <p class="date-posted"><%= format_datetime(post.created_at) %></p>
          <hr>
          <p><%= truncate(post.body.to_plain_text, length: 180) %></p>

          <nav class="level">
            <div class="level-left"></div>
            <div class="level-right">
              <%= link_to edit_user_post_path(current_user, post),
                          class: 'button is-link' do %>
                <i class="fas fa-cog"></i>
              <% end %>
              <%= link_to user_post_path(current_user, post),
                          method: :delete, class: 'button is-text' do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </nav>
        </div>
      </div>
    <% end %>
  </div>
</div>
