<div id="user-posts-new">
  <%= render 'layouts/error_messages', obj: @post %>
  <h1>New Post</h1>

  <%= form_with model: Post.new,
                url: user_posts_path(current_user),
                local: true do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_field :title,
                         placeholder: 'Title', required: true,
                         maxlength: 250, class: 'input is-large' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.rich_text_area :body,
                             placeholder: 'Write whatever here',
                             class: 'textarea' %>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <%= f.submit 'Post!',
                     class: 'button is-link' %>
      </div>
      <div class="control">
        <%= link_to 'Cancel', user_posts_path(current_user),
                    class: 'button is-light' %>
      </div>
    </div>
  <% end %>
</div>
